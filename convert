#!/bin/bash
# Inside `vagrant ssh`.

cd /var/www/presskit

php index.php > /pxn/presskit/index.html
php style.css > /pxn/presskit/style.css

# And here come the dirty hack to make presskit workâ€¦

# -------------------------------------------------------
# BulletML for Unity
# -------------------------------------------------------

